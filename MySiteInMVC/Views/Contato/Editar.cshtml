@model ContatoModel
@{
    ViewData["Title"] = "Editar contato";
}
<div class="text-center">

    
    <h1 class="display-6">Editar contato</h1>


</div>
<form asp-controller="Contato" asp-action="Alterar" method="Post">
   <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" asp-for="Name" class="form-control"  placeholder="Digite o nome">
  </div>

  <div class="form-group">
    <label for="nome">E-mail</label>
    <input type="text "asp-for="Email"  class="form-control"  placeholder="Digite o e-mail">
  </div>

  <div class="form-group">
    <label for="nome">Celular</label>
    <input type="text" asp-for="Celular" class="form-control"  placeholder="Digite o celular">
  </div>
 
  <button type="submit" class="btn btn-primary btn-block">Alterar</button>
  <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>